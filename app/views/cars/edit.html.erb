<%= form_with model: @car, method: :patch, local: true do |f| %>
<div class="mb-3">
      <%= f.label :make, class: "form-label" %>
      <%= f.text_field :make, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :model, class: "form-label" %>
      <%= f.text_field :model, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :colour, class: "form-label" %>
      <%= f.text_field :colour, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :description, class: "form-label" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :year, class: "form-label" %>
      <%= f.select :year, (1900..Date.today.year).to_a.reverse, { prompt: "Select Year" }, class: "form-select" %>
    </div>

    <div class="mb-3">
      <%= f.label :photos, class: "form-label" %>
      <%= f.file_field :photo, class: "form-control" %>
    </div>

    <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
